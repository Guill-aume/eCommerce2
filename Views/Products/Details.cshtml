@model Product
@{
    ViewData["Title"] = "Additional information about specific product";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th></th>@*@Html.DisplayNameFor(model => model.ImageURl)</th>*@
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@Model.ImageURl" alt="@Model.Name" style="max-width:150px">
                    </td>   
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => Model.Name)
                    </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Model.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Model.Price)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class=""></i>Add to Cart</a>
                        </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>